    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-md-6 col-xl-6">
                <div class="h-100 bg-light rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="mb-0">User</h5>
                    </div>
                    <div class="d-flex align-items-center border-bottom py-3">
                        <div class="row">
                            {{#each userDetails}}
                            <div class="col-12">
                                <h6>Name : {{username}}</h6>
                            </div>
                            <div class="col-12">
                                <h6>Id : {{_id}}</h6>
                            </div>
                            <div class="col-12">
                                <h6>Email : {{email}}</h6>
                            </div>
                            <div class="col-12">
                                <h6>Number : {{phoneNo}}</h6>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-xl-6">
                <div class="h-100 bg-light rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="mb-0">Delivery Address</h5>
                    </div>
                    <div class="d-flex align-items-center border-bottom py-3">
                        <div class="row">
                            {{#each orderDetails}}
                            <div class="col-12">
                                <h6>Name : {{deliveryaddress.firstname}}</h6>
                            </div>
                            <div class="col-12">
                                <h6>Number : {{deliveryaddress.phonenumber}}</h6>
                            </div>
                            <div class="col-12">
                                <h6>Address : {{deliveryaddress.address}}</h6>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-9">
                <div class="table_section padding_infor_info">
                    <div class="table-responsive-sm">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>no</th>
                                    <th>name</th>
                                    <th style="width: 22%;">image</th>
                                    <th style="width: 14%;">quantity</th>
                                    <th style="width: 9%;">price</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{name}}</td>
                                    <td> <img style="width: 26%;" src="/images/productImages/{{image.[0]}}"></td>
                                    <td>{{quantity}}</td>
                                    <td>{{subPrice}}</td>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>