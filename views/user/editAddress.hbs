<section class="checkout-section spad">
    <div class="container">
        <form action="/updateFromCheckout" method="post" class="checkout-form">
            <div class="row">
                <div class="col-lg-6">
                    <h4>address</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="fir">First Name<span>*</span></label>
                            <input type="text" id="fir" name="firstname" value="{{address.firstName}}" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="last">Last Name<span>*</span></label>
                            <input type="text" id="last" name="lastname" value="{{address.lastName}}" required>
                        </div>
                        <div class="col-lg-12">
                            <label for="cun-name">Address</label>
                            <input type="text" id="cun-name" name="address" value="{{address.address}}" required>
                        </div>
                        <div class="col-lg-12">
                            <label for="cun">Country<span>*</span></label>
                            <input type="text" id="cun" name="country" value="{{address.country}}" >
                        </div>
                        <div class="col-lg-12">
                            <label for="street">Postcode<span>*</span></label>
                            <input type="text" id="street" class="street-first" name="postcode" value="{{address.postcode}}" required>
                           
                        </div>
                        <div class="col-lg-12">
                            <label for="zip">District</label>
                            <input type="text" id="zip" name="district" value="{{address.district}}" required>
                        </div>
                        <div class="col-lg-12">
                            <label for="town">Town / City<span>*</span></label>
                            <input type="text" id="town" name="city" value="{{address.city}}" required >
                        </div>
                        <div class="col-lg-6">
                            <label for="email">Email Address<span>*</span></label>
                            <input type="text" id="email" name="email" value="{{address.emailAddress}}" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="phone">Phone<span>*</span></label>
                            <input type="text" id="phone" name="phone" value="{{address.phone}}" required>
                        </div>
                                                <div class="col-lg-6">
                            <label for="phone"></label>
                            <input type="hidden" id="id" name="id" value="{{address._id}}" >
                        </div>
                        <div class="col-lg-12">
                            <div class="order-btn">
                                <button type="submit" class="site-btn place-btn">update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

