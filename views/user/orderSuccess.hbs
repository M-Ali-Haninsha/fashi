<button type="button" class="btn btn-danger btn-sm mt-4 ml-4" style="margin-left: 4px;" onclick="downloadPDF()">Export to PDF</button>


<section class="confirmation_part section_padding">
    <div class="container" id="datatable">
      <div class="row" style="justify-content: space-evenly;">
        <div class="col-lg-12 success">
          <div class="confirmation_tittle">
            <span class="text-success" style="font-size: 1.4rem;">Thank you. Your order has been received.</span>
          </div>
        </div>
      {{#with orderDetails}}
        <div class="col-lg-5 col-lx-4 info" style="border: solid;
    background-color: white;">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                <p class="line1">order id</p><span>: {{_id}}</span>
              </li>
              <li class="line2">
                <p class="line1">date</p><span>: {{date}}</span>
              </li>
              <li class="line2">
                <p class="line1">total</p><span>: {{grandtotal}}</span>
              </li>
              <li class="line2">
                <p class="line1">payment methord</p><span>: {{paymentmethod}}</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-5 col-lx-4 info" style="border: solid;
    background-color: white;">
          <div class="single_confirmation_details">
            <h4>Billing Address</h4>
            <ul>
              <li>
                <p class="line1">Address</p><span>: {{deliveryaddress.address}}</span>
              </li>
              <li class="line2">
                <p class="line1">District</p><span>: {{deliveryaddress.district}}</span>
              </li>
              <li class="line2">
                <p class="line1">city/town</p><span>: {{deliveryaddress.state}}</span>
              </li>
              <li class="line2">
                <p class="line1"> country</p><span>: {{deliveryaddress.country}}</span>
              </li>
              <li class="line2">
                <p class="line1">pincode</p><span>: {{deliveryaddress.pincode}}</span>
              </li>
            </ul>
          </div>
        </div>

      </div>
      <div class="row">
        <div class="col-lg-6 OrderDetails mb-4">
          <div class="order_details_iner" style="    border: 10px solid grey;
    background: white;">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
              {{#each products}}
                <tr>
                  <th colspan="2"><span>{{name}}</span></th>
                  <th>{{quantity}}</th>
                  <th> <span>₹{{subPrice}}</span></th>
                </tr>
          {{/each}}
                <tr>
                  <th colspan="3">shipping</th>
                  {{!-- <th><span>flat rate: $50.00</span></th> --}}
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="col" colspan="3">Total</th>
                  <th><span>₹{{grandtotal}}</span></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
        {{/with}}
      </div>
    </div>
  </section>

<script>
             function downloadPDF() {
            var table = document.getElementById("datatable");
            var newWin = window.open('', 'Print-Window');
            newWin.document.open();
            newWin.document.write('<html><body onload="window.print()">' + table.outerHTML + '</html>');
            newWin.document.close();
            setTimeout(function () { newWin.close(); }, 10);
		      }
        </script>
          

