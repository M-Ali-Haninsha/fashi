                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script src="/javascripts/zoom.js"></script>

<script>
    $(document).ready(function () {
        // Get all thumbnail images
        var thumbnailImages = $('.image_list li img');

        // Add click event listener to each thumbnail image
        thumbnailImages.click(function () {
            // Get the value of the src attribute of the clicked thumbnail
            var newImageSrc = $(this).attr('src');

            // Update the src attribute of the main product image to the new image
            $('#image-container img').attr('src', newImageSrc);
        });
    });
</script>
<script>
    function toAdd(id) {
        $.ajax({
            url: '/addToCart?id=' + id,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    swal("Product addedd!", "Please check your cart!", "success");
                }
            }
        })
    }
</script>