<section class="contact spad m-4">
  <div class="container">
    <div class="row">
      {{#each userPro}}
      <div class="col-6 col-xl-5 mb-4">
        <div class="bg-light rounded h-100 p-4">
          <h6 class="mb-4">Product {{inc @index}}</h6>
          <div class="testimonial-item text-center">
            <img class="img-fluid  mx-auto mb-4"
              src="/images/productImages/{{image.[0]}}"
              style="width: 26%;">
            <h5 class="mb-1">{{name}}</h5>
            <p class="mb-0"><b>Quantity :{{quantity}}</b></p>
            <p class="mb-0"><b>Total Amount :{{subPrice}}</b></p>
          </div>
        </div>
      </div>
      {{/each}}
      <div class="col-6 col-xl-5 mb-4 cart-wrap ftco-animate mx-4">
        
      {{#each orderData}}
        <div class="cart-total mb-3">
          <h5 class="mb-3">Delivery Address </h5>
          <p class="d-flex">
            <span>name: </span>
            <span style="margin-left: 1rem;">{{deliveryaddress.firstname}}</span>
          </p>
          <p class="d-flex">
            <span>Address: </span>
            <span style="margin-left: 1rem;">{{deliveryaddress.address}}</span>
          </p>
            <p class="d-flex">
            <span>Phone No: </span>
            <span style="margin-left: 1rem;">{{deliveryaddress.phonenumber}}</span>
          </p>
        </div>
{{!-- {{#each userPro}}
        <div class="cart-total mb-3">
          <p class="d-flex">
            <span>Subtotal</span>
            <span>₹{{subPrice}}</span>
          </p>
          {{/each}} --}}
          {{!-- <p class="d-flex">
            <span>Delivery</span>
            <span>₹0.00</span>
          </p>
          <p class="d-flex">
            <span>Discount</span>
            <span>₹{{orderData.discount}} ({{orderData.couponCode}})</span>
          </p>
          <p class="d-flex">
            <span>Wallet</span>
            <span>₹{{orderData.wallet}}</span>
          </p> --}}
          <hr>
          <p class="d-flex total-price">
            <span>Total:</span>
            <span style="margin-left: 1rem;">₹{{grandtotal}}</span>
          </p>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>

